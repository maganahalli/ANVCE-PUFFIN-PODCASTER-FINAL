<?xml version="1.0" encoding="utf-8"?>

<layout>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/audio_book_link"
        android:layout_width="@dimen/audio_book_image_v21_width"
        android:layout_height="@dimen/audio_book_image_v21__height"
        android:background="@drawable/ic_book_audio"
        android:backgroundTint="@color/colorPrimaryDark"
        android:contentDescription="@string/audio_books_link"
        android:foregroundGravity="left"
        android:paddingEnd="@dimen/text_margin_eight_dp"
        android:paddingStart="@dimen/text_margin_eight_dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/podcast_title"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/audio_book_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimaryDark"
        android:contentDescription="@string/audio_books_link"
        android:foregroundGravity="left"
        android:text="@string/audio_books"
        android:paddingEnd="@dimen/text_margin_eight_dp"
        android:paddingStart="@dimen/text_margin_eight_dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/podcast_title"
        app:layout_constraintTop_toBottomOf="@+id/audio_book_link"  />


    <TextView
        android:id="@+id/podcast_title"
        style="?android:attr/textAppearanceLarge"
        android:layout_width="209dp"
        android:layout_height="51dp"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/nunito_sans_extra_bold"
        android:foregroundGravity="center"
        android:lineSpacingMultiplier="0.9"
        android:paddingBottom="@dimen/text_bottom_padding"
        android:paddingEnd="@dimen/text_margin_eight_dp"
        android:paddingStart="@dimen/text_margin_eight_dp"
        android:text="@string/podcast_title_label"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/podcast_title_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

</layout>