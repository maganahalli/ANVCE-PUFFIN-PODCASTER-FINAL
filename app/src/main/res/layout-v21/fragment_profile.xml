<?xml version="1.0" encoding="utf-8"?>
<layout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profileScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/card_margin_small"
            android:background="@color/colorPrimary"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/photo"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/ic_person_outline_black_80dp"
                android:contentDescription="@string/default_widget_title"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:id="@+id/share_app_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/shareIcon"
                    android:layout_width="@dimen/profile_image_icon_size"
                    android:layout_height="@dimen/profile_image_icon_size"
                    android:layout_marginTop="@dimen/text_margin_eight_dp"
                    android:background="@drawable/ic_share_black_24dp"
                    android:contentDescription="@string/default_widget_title"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/shareTextLabel"
                    style="?android:attr/textAppearanceLarge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/text_margin_eight_dp"
                    android:layout_marginTop="@dimen/text_margin_eight_dp"
                    android:layout_marginEnd="@dimen/text_margin_eight_dp"
                    android:fontFamily="@font/nunito_sans_extra_bold"
                    android:text="@string/share_this_app"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccentNight"
                    android:textSize="@dimen/text_size_twenty_five_sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/feedback_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/feedbackIcon"
                    android:layout_width="@dimen/profile_image_icon_size"
                    android:layout_height="@dimen/profile_image_icon_size"
                    android:layout_marginTop="@dimen/text_margin_eight_dp"
                    android:background="@drawable/ic_reply_black_24dp"
                    android:contentDescription="@string/default_widget_title"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/feedbackTextLabel"
                    style="?android:attr/textAppearanceLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/text_margin_eight_dp"
                    android:layout_marginTop="@dimen/text_margin_eight_dp"
                    android:layout_marginEnd="@dimen/text_margin_eight_dp"
                    android:fontFamily="@font/nunito_sans_extra_bold"
                    android:text="@string/feedback_label"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccentNight"
                    android:textSize="@dimen/text_size_twenty_five_sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/downloadedLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/downLoadIcon"
                    android:layout_width="@dimen/profile_image_icon_size"
                    android:layout_height="@dimen/profile_image_icon_size"
                    android:layout_marginTop="@dimen/text_margin_eight_dp"
                    android:background="@drawable/ic_file_download_black_24dp"
                    android:contentDescription="@string/default_widget_title"
                    android:scaleType="centerCrop"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/feedbackIcon" />

                <TextView
                    android:id="@+id/downloadTextLabel"
                    style="?android:attr/textAppearanceLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/text_margin_eight_dp"
                    android:layout_marginTop="@dimen/text_margin_eight_dp"
                    android:layout_marginEnd="@dimen/text_margin_eight_dp"
                    android:fontFamily="@font/nunito_sans_extra_bold"
                    android:text="@string/download_label"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccentNight"
                    android:textSize="@dimen/text_size_twenty_five_sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/historyLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/listeningHistoryIcon"
                    android:layout_width="@dimen/profile_image_icon_size"
                    android:layout_height="@dimen/profile_image_icon_size"
                    android:layout_marginTop="@dimen/text_margin_eight_dp"
                    android:background="@drawable/ic_headphones"
                    android:backgroundTint="@color/bg_light"
                    android:contentDescription="@string/default_widget_title"
                    android:text="@string/listening_history_label"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/ListeningHistoryTextLabel"
                    style="?android:attr/textAppearanceLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/text_margin_eight_dp"
                    android:layout_marginTop="@dimen/text_margin_eight_dp"
                    android:layout_marginEnd="@dimen/text_margin_eight_dp"
                    android:fontFamily="@font/nunito_sans_extra_bold"
                    android:text="@string/listening_history_label"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccentNight"
                    android:textSize="@dimen/text_size_twenty_five_sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/profile_image_icon_size"
                    android:layout_height="@dimen/profile_image_icon_size"
                    android:layout_marginTop="@dimen/text_margin_eight_dp"
                    android:backgroundTint="@color/bg_light"
                    android:contentDescription="@string/default_widget_title"
                    android:textAlignment="center" />

                <TextView
                    style="?android:attr/textAppearanceLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/text_margin_eight_dp"
                    android:layout_marginTop="@dimen/text_margin_eight_dp"
                    android:layout_marginEnd="@dimen/text_margin_eight_dp"
                    android:fontFamily="@font/nunito_sans_extra_bold"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccentNight"
                    android:textSize="@dimen/text_size_twenty_five_sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</layout>